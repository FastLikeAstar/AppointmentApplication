<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<StackPane alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" >
   <children>
      <VBox alignment="CENTER" fillWidth="false" layoutX="88.0" layoutY="8.0" prefHeight="389.0" prefWidth="408.0" spacing="10.0">
         <children>
            <Label fx:id="labelWelcome" alignment="TOP_RIGHT" contentDisplay="CENTER" text="Welcome">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <Label fx:id="labelLogin" text="Login to continue">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="labelUsername" text="Username:" />
            <TextField fx:id="textFieldUsername" prefHeight="25.0" prefWidth="200.0" promptText="Enter your username..." />
            <Label fx:id="labelPassword" text="Password:" />
            <PasswordField fx:id="textFieldPassword" prefHeight="25.0" prefWidth="200.0" promptText="Enter your password..." />
            <Button fx:id="buttonLogin" mnemonicParsing="false" onAction="#AttemptLogin" text="Login" />
            <Label fx:id="labelFeedback" alignment="CENTER" maxHeight="-Infinity" prefHeight="50.0" prefWidth="350.0" text="Failed login text" textFill="RED" />
            <Label fx:id="labelLocation" text="Location:" />
            <Label fx:id="labelActualLocation" text="Location not found..." />
         </children>
      </VBox>
   </children>
</AnchorPane>
</StackPane>